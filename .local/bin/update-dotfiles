#!/bin/sh

if [ -z "$DOTFILES_REPO" ]; then
	echo "DOTFILES_REPO is not set.  Aborting."
	exit 1
fi
files=$("$HOME/.local/lib/dotfiles/scripts/print_dotfiles")
echo "Copying files..."
echo "$files" | rsync --ignore-missing-args --files-from=- ~ "$DOTFILES_REPO"
if ! cd "$DOTFILES_REPO"; then
	echo "Cannot cd into DOTFILES_REPO.  Aborting."
	exit 1
fi
echo "Fixing paths..."
echo "$files" | xargs "$HOME/.local/lib/dotfiles/scripts/fix_paths" update
echo "Initializing configurations..."
"$HOME/.local/lib/dotfiles/scripts/init_config" update
git status
echo "Done."
